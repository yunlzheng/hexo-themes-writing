#header
  text-shadow 0 0 1px #FFF;  
  margin-top 0px;
  .profile
    background color-base;
    height 180px
    text-align center
    padding-top 20px
    .logo
      width 100px
      height 100px
  a
    color #999
    &:hover
      color color-link
      text-decoration none
  h1
    font-weight normal
    font-size 2.5em
    line-height 1
  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  .logo
      height 40px
      width:40px
  #main-nav
    border-top 1px solid #DDD
    border-bottom 1px solid #DDD
    font-family font-title
    line-height 2.5em
    &.top_mode
      position: fixed
      top 0px
      left 0px
      right 0px
      z-index 10000
      background-color #fff
    ul
      list-style none
      li
        display inline-block
        padding: 3px 0px
        width 24%
        text-align: center
        a
          color #333
          font-size 16px



    

    
